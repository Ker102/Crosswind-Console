{
  "$schema": "https://modelcontextprotocol.io/schemas/mcp.json",
  "mcpServers": {
    "firecrawl": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "${PLAYWRIGHT_BROWSERS_PATH:-0}"
      }
    },
    "travel": {
      "command": "python",
      "args": [
        "mcp_servers/travel_server.py"
      ],
      "env": {
        "RAPIDAPI_KEY": "${RAPIDAPI_KEY}"
      }
    },
    "trends": {
      "command": "python",
      "args": [
        "mcp_servers/trends_server.py"
      ],
      "env": {
        "GOOGLE_MAPS_API_KEY": "${GOOGLE_MAPS_API_KEY}",
        "RAPIDAPI_KEY": "${RAPIDAPI_KEY}",
        "X_BEARER_TOKEN": "${X_BEARER_TOKEN}"
      }
    },
    "jobs": {
      "command": "python",
      "args": [
        "mcp_servers/jobs_server.py"
      ],
      "env": {
        "RAPIDAPI_KEY": "${RAPIDAPI_KEY}"
      }
    },
    "search": {
      "command": "python",
      "args": [
        "mcp_servers/search_server.py"
      ],
      "env": {
        "GOOGLE_MAPS_API_KEY": "${GOOGLE_MAPS_API_KEY}",
        "GOOGLE_SEARCH_CX": "${GOOGLE_SEARCH_CX}"
      }
    },
    "rapidapi-sky": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.rapidapi.com",
        "--header",
        "x-api-host: flights-sky.p.rapidapi.com",
        "--header",
        "x-api-key: ${RAPIDAPI_KEY}"
      ]
    },
    "rapidapi-google-flights2": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.rapidapi.com",
        "--header",
        "x-api-host: google-flights2.p.rapidapi.com",
        "--header",
        "x-api-key: ${RAPIDAPI_KEY}"
      ]
    },
    "rapidapi-kiwi": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.rapidapi.com",
        "--header",
        "x-api-host: kiwi-com-cheap-flights.p.rapidapi.com",
        "--header",
        "x-api-key: ${RAPIDAPI_KEY}"
      ]
    },
    "rapidapi-booking": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.rapidapi.com",
        "--header",
        "x-api-host: booking-com.p.rapidapi.com",
        "--header",
        "x-api-key: ${RAPIDAPI_KEY}"
      ]
    },
    "google-maps": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-google-maps"
      ],
      "env": {
        "GOOGLE_MAPS_API_KEY": "${GOOGLE_MAPS_API_KEY}"
      }
    }
  }
}